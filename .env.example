DI_ENDPOINT=https://<your-di-resource>.cognitiveservices.azure.com/
# Optional: switch between local and adls writers
STORAGE_MODE=local
DATA_ROOT=./ML_Fraud/data
MODEL_ID=prebuilt-idDocument

# Azure Storage (required for STORAGE_MODE=adls)
# Option A: Connection string (enables SAS generation)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
# Option B: Account URL + Managed Identity (no SAS generation here; use pre-created SAS or public read)
# STORAGE_ACCOUNT_URL=https://<account>.blob.core.windows.net
STORAGE_CONTAINER=mlfraud
BLOB_SAS_TTL_MINUTES=60
